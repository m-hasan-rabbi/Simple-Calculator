<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_weight="6"
    android:background="#99FA03">

    <TextView
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="150dp"
        android:background="#FFFFFF"
        android:id="@+id/display"
        android:textSize="50dp"

        android:gravity="bottom|right"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_weight="1"
        >
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="7"
            android:textSize="30dp"
            android:background="#99FA03"
            android:id="@+id/btn_7"
            android:onClick="method_7"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="8"
            android:textSize="30dp"
            android:background="#99FA03"
            android:id="@+id/btn_8"
            android:onClick="method_8"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="9"
            android:textSize="30dp"
            android:background="#99FA03"
            android:id="@+id/btn_9"
            android:onClick="method_9"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="+"
            android:textSize="30dp"
            android:id="@+id/btn_sum"
            android:background="#1626ED"
            android:onClick="method_sum"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_weight="1"
        >
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="4"
            android:textSize="30dp"
            android:background="#99FA03"
            android:id="@+id/btn_4"
            android:onClick="method_4"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="5"
            android:textSize="30dp"
            android:background="#99FA03"
            android:id="@+id/btn_5"
            android:onClick="method_5"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="6"
            android:textSize="30dp"
            android:background="#99FA03"
            android:id="@+id/btn_6"
            android:onClick="method_6"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="-"
            android:textSize="30dp"

            android:id="@+id/btn_sub"
            android:background="#1626ED"
            android:onClick="method_sub"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_weight="1"
        >
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="30dp"
            android:background="#99FA03"
            android:id="@+id/btn_1"

            android:onClick="method_1"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="2"
            android:textSize="30dp"
            android:background="#99FA03"
            android:id="@+id/btn_2"
            android:onClick="method_2"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="3"
            android:textSize="30dp"
            android:background="#99FA03"
            android:id="@+id/btn_3"
            android:onClick="method_3"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="*"
            android:textSize="30dp"
            android:id="@+id/btn_mul"
            android:background="#1626ED"
            android:onClick="method_mul"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_weight="1"
        >
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="30dp"
            android:background="#99FA03"
            android:id="@+id/btn_0"
            android:onClick="method_0"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="c"
            android:textSize="30dp"
            android:background="#99FA03"
            android:id="@+id/btn_c"
            android:onClick="method_c"
            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="="
            android:textSize="30dp"
            android:background="#99FA03"
            android:id="@+id/btn_equal"
            android:onClick="method_equal"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="/"
            android:textSize="30dp"
            android:background="#1626ED"
            android:id="@+id/btn_div"
            android:onClick="method_div"
            />


    </LinearLayout>
</LinearLayout>